<div class="row">
	<div class="col-xs-offset-1 col-xs-10 col-sm-6 col-sm-offset-3">

		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">Sign In</h3>
			</div>
			<div class="panel-body">

				<form id="login-form" class="form-horizontal" role="form" action="/account" method="post">

					<div class="input-group" style="margin-top: 15px">
						<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						<input id="username" name="username" type="text" class="form-control" value="" placeholder="username or email" />
					</div>

					<div class="input-group" style="margin-top: 25px">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						<input id="password" name="password" type="password" class="form-control" value="" placeholder="password" />
					</div>

					<div class="input-group" style="margin-top: 15px">
						<div class="checkbox">
							<label>
								<input id="remember" type="checkbox" name="remember" value="1"> Remember me
							</label>
						</div>
					</div>

					<divx class="form-group">
						<button type="submit" class="btn btn-success">Login</button>
					</div>

				</form>

				<!-- <form id="signup-form" class="form-horizontal" role="form" action="/signup">

				</form> -->

			</div>
		</div>

	</div>
</div>